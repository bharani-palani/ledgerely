# Enable mod_rewrite
RewriteEngine On

# Set the base directory if hosted in a subdirectory (optional)
# Replace 'your-subdirectory' with your actual directory name
RewriteBase /dev/

# Redirect all requests to index.html except static files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [L]

# Serve static files from the build directory
<IfModule mod_headers.c>
  # Cache control for static files
  <FilesMatch "\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|otf|ttc|webp|mp4|mp3|wav|ogg|json)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
</IfModule>
